<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_previous_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="@dimen/space_2x"
            android:paddingRight="@dimen/space_2x"
            android:src="@drawable/ic_chevron_left_gray"
            tools:ignore="MissingConstraints"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/iv_next_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingLeft="@dimen/space_2x"
            android:paddingRight="@dimen/space_2x"
            android:src="@drawable/ic_chevron_right_gray" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>